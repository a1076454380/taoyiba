<!DOCTYPE html>
<html>

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<title></title>
		<link rel="stylesheet" type="text/css" href="css/mui.min.css" />
		<link rel="stylesheet" type="text/css" href="css/main.css" />
		<script src="js/rem.js" type="text/javascript" charset="utf-8"></script>
		<script src="js/mui.min.js" type="text/javascript" charset="utf-8"></script>
		<script src="js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
	</head>
	<style type="text/css">
		.pay .pay-group img{width: auto;height: .4rem;}
		.main span{color: rgb(280,80,60);font-size: .25rem;font-weight: bold;}
	</style>
	<body>
		<div class="wrapper pay" id="app">
			<!--顶部搜索框-->
			<header class="head">
				<span class="header-back mui-action-back">
					<img src="img/detail_03.png"/>
				</span>
				<div>
					我的优惠券
				</div>
				<span></span>
			</header>
			<div class="main">
				<p>
					选择优惠券
				</p>
				<div class="pay-group">
					<img src="img/cartchange_03.png"/>
					<span>
						- ¥6.00
					</span>
					<div class="pay-circle active">
						<img src="img/pay_09.png"/>
					</div>
				</div>
				<div class="pay-group">
					<img src="img/cartchange_03.png"/>
					<span>
						- ¥10.00
					</span>
					<div class="pay-circle">
						<img src="img/pay_09.png"/>
					</div>
				</div>
			</div>
			<div class="bottom-buy" onclick="opennew('order')">
				确定
			</div>
		</div>
	</body>
	<script type="text/javascript">
		function opennew(target) {
				mui.openWindow({
					url: '' + target + '.html',
					id: '' + target + ''
				})
			}
		$(function() {
			function plusReady() {
				// 弹出系统等待对话框
				var w = plus.nativeUI.showWaiting("数据加载中...");
			}
			if(window.plus) {
				plusReady();
			} else {
				document.addEventListener("plusready", plusReady, false);
			}
			setTimeout(function() {
				plus.nativeUI.closeWaiting()
			}, 1000)
			function opennew(target) {
				mui.openWindow({
					url: '' + target + '.html',
					id: '' + target + ''
				})
			}
			$('.pay-circle').click(function(){
				if($(this).attr('class')=='pay-circle'){
					$(this).addClass('active')
				}else{
					$(this).removeClass('active')
				}
			})
		})
	</script>

</html>